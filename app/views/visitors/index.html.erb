<!-- Masthead -->
   <header class="masthead text-white text-center">
     <div class="overlay"></div>
     <div class="container">
       <div class="row">
         <div class="col-xl-9 mx-auto">
           <h1 class="mb-5"></h1>
         </div>
         <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
           <%= form_for @url_shorten, html: { remote: true } do |f| %>
             <div class="form-row">
               <div class="col-12 col-md-8 mb-2 mb-md-0">
                  <%= f.text_field :original_url, class: 'form-control form-control-lg', type: 'url', placeholder: 'Enter Original URL', autofocus: true, autocomplete: 'off' %>
               </div>
               <div class="col-12 col-md-4">
                 <button type="submit" class="btn btn-block btn-lg btn-primary text-uppercase">Shorten URL</button>
               </div>
             </div>
           <%- end -%>
         </div>
       </div>
     </div>
   </header>

   <!-- Icons Grid -->
   <section class="features-icons bg-light text-center">
     <div class="container">
       <div class="row">
         <div class="col-lg-12 text-left">
           <p><strong class="text-uppercase">Original URL:</strong> <span id="showOriginalUrl"></span></p>
           <p><strong class="text-uppercase">shorten URL:</strong><span id="showshortUrl"></span></p> 
           <button class="btn btn-info">Copy to clipboard</button>
         </div>
       </div>
     </div>
   </section>
